{
  "name": "docmind-desktop",
  "version": "0.3.3",
  "description": "Docmind - Intelligent Document Search & Chat for Education",
  "main": "dist/main/index.js",
  "author": {
    "name": "digital nalu GmbH",
    "email": "info@digital-nalu.ch"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "setup": "npm install && ./scripts/download-qdrant.sh",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:preload && wait-on http://localhost:5173 && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "prebuild:main": "npx tsx scripts/inject-secret.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "npx esbuild src/preload/index.ts --bundle --platform=node --outfile=dist/preload/index.js --external:electron --format=cjs --target=node18",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:win": "npm run build && electron-builder -w",
    "dist:linux": "npm run build && electron-builder -l",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.563.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  }
}
